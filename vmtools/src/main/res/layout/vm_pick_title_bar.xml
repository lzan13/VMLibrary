<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/vm_pick_common_title_container"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@color/vm_white"
    android:clickable="true"
    tools:context=".ui.VMPickGridActivity"
    >

    <ImageButton
        android:id="@+id/vm_common_back_btn"
        android:layout_width="@dimen/vm_dimen_48"
        android:layout_height="@dimen/vm_dimen_48"
        android:background="@drawable/vm_click_full_transparent"
        android:src="@drawable/vm_ic_arrow_left"
        android:tint="@color/vm_gray_black"
        />

    <TextView
        android:id="@+id/vm_common_title_tv"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/vm_common_back_btn"
        android:textSize="18sp"
        tools:text="图片"
        style="@style/VMText.Title"
        />

    <Button
        android:id="@+id/vm_common_ok_btn"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/vm_margin_normal"
        android:textColor="@color/vm_white"
        tools:text="完成"
        style="@style/VMBtn.Flat.Fillet.Green"
        />
</RelativeLayout>