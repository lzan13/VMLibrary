<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/vm_top_bar_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/vm_dimen_48"
    tools:context=".widget.VMTopBar">
    <!--左侧按钮-->
    <ImageButton
        android:id="@+id/vm_top_bar_icon"
        android:layout_width="@dimen/vm_dimen_48"
        android:layout_height="@dimen/vm_dimen_48"
        android:background="@drawable/vm_click_full_transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/vm_ic_arrow_left" />
    <!--标题-->
    <TextView
        android:id="@+id/vm_top_bar_title_tv"
        style="@style/VMText.Title"
        android:layout_width="@dimen/vm_dimen_0"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="@dimen/vm_size_18"
        app:layout_constraintBottom_toTopOf="@+id/vm_top_bar_subtitle_tv"
        app:layout_constraintEnd_toStartOf="@+id/vm_top_bar_end_container"
        app:layout_constraintStart_toEndOf="@+id/vm_top_bar_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginEnd="@dimen/vm_margin_large"
        app:layout_goneMarginStart="@dimen/vm_margin_large"
        tools:text="图片" />
    <!--子标题-->
    <TextView
        android:id="@+id/vm_top_bar_subtitle_tv"
        style="@style/VMText.Title"
        android:layout_width="@dimen/vm_dimen_0"
        android:layout_below="@+id/vm_top_bar_title_tv"
        android:layout_alignParentBottom="true"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/vm_subtitle"
        android:textSize="@dimen/vm_size_12"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/vm_top_bar_title_tv"
        app:layout_constraintStart_toStartOf="@+id/vm_top_bar_title_tv"
        app:layout_constraintTop_toBottomOf="@+id/vm_top_bar_title_tv"
        tools:text="子标题" />
    <!--尾部容器-->
    <LinearLayout
        android:id="@+id/vm_top_bar_end_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/vm_top_bar_end_btn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginEnd="@dimen/vm_margin_normal" />
    <!--右侧的按钮-->
    <Button
        android:id="@+id/vm_top_bar_end_btn"
        style="@style/VMBtn.Flat.Fillet.Green"
        android:layout_marginEnd="@dimen/vm_margin_normal"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/vm_top_bar_end_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginEnd="@dimen/vm_margin_normal" />
    <!--右侧图标按钮-->
    <ImageButton
        android:id="@+id/vm_top_bar_end_icon"
        android:layout_width="@dimen/vm_dimen_48"
        android:layout_height="@dimen/vm_dimen_48"
        android:background="@drawable/vm_click_full_transparent"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/vm_ic_close" />
</android.support.constraint.ConstraintLayout>