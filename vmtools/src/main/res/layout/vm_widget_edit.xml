<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:minHeight="@dimen/vm_dimen_48"
    >

    <!--输入框-->
    <android.support.design.widget.TextInputEditText
        android:id="@+id/vm_edit_text"
        android:layout_centerVertical="true"
        android:background="@color/vm_transparent"
        android:maxLines="1"
        android:padding="@dimen/vm_dimen_8"
        style="@style/VMEdit"
        />

    <!--隐藏图标-->
    <ImageView
        android:id="@+id/vm_eye_icon"
        android:layout_width="@dimen/vm_dimen_36"
        android:layout_height="@dimen/vm_dimen_36"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:padding="@dimen/vm_dimen_8"
        android:tint="@color/vm_black_54"
        android:visibility="gone"
        style="@style/VMBtn.Flat.Fillet.Full"
        />

    <!--清空图标-->
    <ImageView
        android:id="@+id/vm_clear_icon"
        android:layout_width="@dimen/vm_dimen_36"
        android:layout_height="@dimen/vm_dimen_36"
        android:layout_alignWithParentIfMissing="true"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/vm_eye_icon"
        android:padding="@dimen/vm_dimen_8"
        android:tint="@color/vm_black_54"
        android:visibility="gone"
        style="@style/VMBtn.Flat.Fillet.Full"
        />
</RelativeLayout >