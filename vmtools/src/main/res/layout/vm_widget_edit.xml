<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/vm_dimen_8"
    android:layout_marginTop="@dimen/vm_dimen_4"
    android:layout_marginEnd="@dimen/vm_dimen_8"
    android:layout_marginBottom="@dimen/vm_dimen_4"
    android:animateLayoutChanges="true">

    <!--输入提示-->
    <TextView
        android:id="@+id/vm_edit_hint_view"
        style="@style/VMText.Caption"
        android:layout_marginStart="@dimen/vm_dimen_8"
        android:textSize="@dimen/vm_size_10"
        android:visibility="gone" />

    <!--输入框-->
    <android.support.design.widget.TextInputEditText
        android:id="@+id/vm_edit_input_view"
        style="@style/VMEdit"
        android:layout_alignWithParentIfMissing="true"
        android:layout_below="@+id/vm_edit_hint_view"
        android:background="@color/vm_transparent"
        android:maxLines="1"
        android:padding="@dimen/vm_dimen_8"
        android:textSize="@dimen/vm_size_14" />

    <!--隐藏图标-->
    <ImageView
        android:id="@+id/vm_edit_eye_icon"
        style="@style/VMBtn.Flat.Fillet.Full"
        android:layout_width="@dimen/vm_dimen_36"
        android:layout_height="@dimen/vm_dimen_36"
        android:layout_alignTop="@+id/vm_edit_input_view"
        android:layout_alignBottom="@+id/vm_edit_input_view"
        android:layout_alignParentEnd="true"
        android:padding="@dimen/vm_dimen_8"
        android:tint="@color/vm_black_54"
        android:visibility="gone" />

    <!--清空图标-->
    <ImageView
        android:id="@+id/vm_edit_clear_icon"
        style="@style/VMBtn.Flat.Fillet.Full"
        android:layout_width="@dimen/vm_dimen_36"
        android:layout_height="@dimen/vm_dimen_36"
        android:layout_alignWithParentIfMissing="true"
        android:layout_alignTop="@+id/vm_edit_input_view"
        android:layout_alignBottom="@+id/vm_edit_input_view"
        android:layout_toStartOf="@+id/vm_edit_eye_icon"
        android:padding="@dimen/vm_dimen_8"
        android:tint="@color/vm_black_54"
        android:visibility="gone" />
</RelativeLayout>