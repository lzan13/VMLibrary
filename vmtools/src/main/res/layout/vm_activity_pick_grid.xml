<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/vm_theme_background"
    tools:context=".picker.ui.VMPickGridActivity">

    <com.vmloft.develop.library.tools.widget.VMTopBar
        android:id="@+id/vm_common_top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:vm_end_btn="@string/vm_pick_complete"
        app:vm_icon="@drawable/vm_ic_arrow_left"
        app:vm_title="@string/vm_pick_picture"
        app:vm_title_color="@color/vm_title" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/vm_common_top_bar">

        <View
            android:id="@+id/vmPickGridBottomSpaceView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/vm_dimen_0"
            android:layout_alignParentBottom="true" />

        <RelativeLayout
            android:id="@+id/vmPickGridBottomBarRL"
            android:layout_width="match_parent"
            android:layout_height="@dimen/vm_dimen_48"
            android:layout_above="@+id/vmPickGridBottomSpaceView">

            <RelativeLayout
                android:id="@+id/vmPickGridChooseFolderRL"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/vm_padding_large"
                android:paddingRight="@dimen/vm_padding_large">

                <TextView
                    android:id="@+id/vmPickGridChooseFolderTV"
                    style="@style/VMText.Menu"
                    android:layout_centerVertical="true"
                    android:ellipsize="end"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:minWidth="@dimen/vm_dimen_96"
                    android:text="@string/vm_pick_all_picture" />

                <ImageView
                    android:layout_width="@dimen/vm_dimen_12"
                    android:layout_height="@dimen/vm_dimen_12"
                    android:layout_alignBottom="@id/vmPickGridChooseFolderTV"
                    android:layout_toRightOf="@id/vmPickGridChooseFolderTV"
                    android:src="@drawable/vm_ic_triangle_indicator"
                    android:tint="@color/vm_gray_54" />
            </RelativeLayout>

            <TextView
                android:id="@+id/vmPickGridPreviewBtn"
                style="@style/VMBtn.Flat.Fillet"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/vm_padding_large"
                android:paddingRight="@dimen/vm_padding_large"
                android:text="@string/vm_pick_preview"
                android:textAllCaps="false"
                android:textStyle="normal" />

        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/vmPickGridRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/vmPickGridBottomBarRL" />
    </RelativeLayout>
</RelativeLayout>
