<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--自定义 Toast 样式-->


    <!--自定义VMImageView的属性-->
    <declare-styleable name="VMImageView">
        <!--模糊半径-->
        <attr format="integer" name="vm_blur_radius" />
        <!--模糊图片是缩放比例-->
        <attr format="integer" name="vm_blur_scale" />
        <!--控件边框颜色-->
        <attr format="color" name="vm_border_color" />
        <!--控件边框宽度-->
        <attr format="dimension" name="vm_border_width" />
        <!--控件按下时颜色的透明度-->
        <attr format="integer" name="vm_press_alpha" />
        <!--控件按下的颜色-->
        <attr format="color" name="vm_press_color" />
        <!--控件圆角半径-->
        <attr format="dimension" name="vm_radius" />
        <!--自定义控件的几种枚举样式 0 正常、1 圆形、2 圆角矩形-->
        <attr format="enum" name="vm_shape_type">
            <enum name="normal" value="0" />
            <enum name="round" value="1" />
            <enum name="rectangle" value="2" />
        </attr>
        <!--是否拦截触摸事件-->
        <attr format="boolean" name="vm_dispatch_touch_event" />
    </declare-styleable>

    <!--自定义剪切控件-->
    <declare-styleable name="VMCropView">
        <attr format="color|integer" name="vm_crop_mask_color" />
        <attr format="color|integer" name="vm_crop_border_color" />
        <attr format="dimension" name="vm_crop_border_width" />
        <attr format="dimension" name="vm_crop_focus_width" />
        <attr format="dimension" name="vm_crop_focus_height" />
        <attr format="enum" name="vm_crop_style">
            <enum name="rectangle" value="0" />
            <enum name="circle" value="1" />
        </attr>
    </declare-styleable>

    <!--自定义音频录制控件-->
    <declare-styleable name="VMRecordView">
        <!--取消颜色-->
        <attr format="color" name="vm_cancel_color" />
        <!--触摸区域外圈颜色-->
        <attr format="color" name="vm_outer_color" />
        <!--触摸区域内圈颜色-->
        <attr format="color" name="vm_inner_color" />
        <attr format="dimension" name="vm_inner_size" />
        <!--触摸区域提示文字-->
        <attr format="string|reference" name="vm_touch_normal_desc" />
        <attr format="string|reference" name="vm_touch_cancel_desc" />
        <!--触摸提示文本颜色-->
        <attr format="color" name="vm_desc_color" />
        <!--触摸提示文本大小-->
        <attr format="dimension" name="vm_desc_size" />
        <!--时间文本颜色-->
        <attr format="color" name="vm_time_color" />
        <!--时间文本大小-->
        <attr format="dimension" name="vm_time_size" />
    </declare-styleable>

    <!--自定义波形展示控件-->
    <declare-styleable name="VMWaveformView">
        <!--文字颜色-->
        <attr format="color" name="vm_waveform_text_color" />
        <!--文字大小-->
        <attr format="dimension" name="vm_waveform_text_size" />
        <!--波形颜色-->
        <attr format="color" name="vm_waveform_waveform_color" />
        <!--波形间隔 树状图时才需要-->
        <attr format="dimension" name="vm_waveform_waveform_interval" />
        <!--波形宽度-->
        <attr format="dimension" name="vm_waveform_waveform_width" />
    </declare-styleable>

    <!--自定义 VMDotLineView 属性-->
    <declare-styleable name="VMDotLineView">
        <!--点的颜色-->
        <attr format="color" name="vm_dot_color" />
        <!--点的半径-->
        <attr format="dimension" name="vm_dot_radius" />
        <!--点圆弧线宽-->
        <attr format="dimension" name="vm_dot_width" />
        <!--是否闭合-->
        <attr format="boolean" name="vm_is_closure" />
        <!--线段颜色-->
        <attr format="color" name="vm_line_color" />
        <!--线段宽度-->
        <attr format="dimension" name="vm_line_width" />
        <!--绘制速度-->
        <attr format="integer" name="vm_speed" />
    </declare-styleable>

    <!--可膨胀的布局控件-->
    <declare-styleable name="VMExpandableLayout">
        <!--持续时间-->
        <attr format="integer" name="vm_el_duration" />
        <!--当前状态是否展开-->
        <attr format="boolean" name="vm_el_expanded" />
        <!--是否支持展开-->
        <attr format="boolean" name="vm_el_expandable" />
    </declare-styleable>

    <!--自定义定时按钮-->
    <declare-styleable name="VMTimerBtn">
        <!--倒计时文案-->
        <attr format="string|reference" name="vm_timer_text" />
        <!--倒计时时间-->
        <attr format="integer" name="vm_timer_time" />
    </declare-styleable>

    <!--自定义指示器控件属性-->
    <declare-styleable name="VMIndicatorView">
        <!--指示器半径-->
        <attr format="dimension" name="vm_indicator_radius" />
        <!--指示器距离-->
        <attr format="dimension" name="vm_indicator_margin" />
        <!--指示器背景色-->
        <attr format="color|integer" name="vm_indicator_background" />
        <!--选中色-->
        <attr format="color|integer" name="vm_indicator_selected" />
        <!--指示器定位-->
        <attr name="vm_indicator_gravity">
            <enum name="left" value="0" />
            <enum name="center" value="1" />
            <enum name="right" value="2" />
        </attr>
        <!--指示器模式-->
        <attr name="vm_indicator_mode">
            <enum name="inside" value="0" />
            <enum name="outside" value="1" />
            <enum name="solo" value="2" />
        </attr>
    </declare-styleable>

    <!--自定义输入框按钮-->
    <declare-styleable name="VMEditView">
        <!--输入提示文案-->
        <attr format="string|reference" name="vm_edit_hint" />
        <!--输入限制-->
        <attr format="string|reference" name="vm_edit_limit" />
        <!--文本颜色-->
        <attr format="color|integer" name="vm_edit_text_color" />
        <!--文本大小-->
        <attr format="dimension" name="vm_edit_text_size" />
        <!--输入类型-->
        <attr name="vm_edit_mode">
            <enum name="number" value="0" />
            <enum name="phone" value="1" />
            <enum name="email" value="2" />
            <enum name="account" value="3" />
            <enum name="text" value="4" />
            <enum name="password" value="5" />
        </attr>
        <!--是否启用输入提示-->
        <!--<attr name="vm_enable_hint" format="boolean" />-->
        <!--是否启用清空图标-->
        <attr format="boolean" name="vm_enable_clear" />
        <!--是否启用眼睛图标，密码模式下有效-->
        <attr format="boolean" name="vm_enable_eye" />
        <!--清空图标-->
        <attr format="boolean" name="vm_edit_clear_res" />
        <!--眼睛图标，密码模式下有效-->
        <attr format="boolean" name="vm_edit_eye_res" />
    </declare-styleable>

    <!--自定义单行控件-->
    <declare-styleable name="VMLineView">
        <!--图标-->
        <attr format="reference" name="vm_line_icon" />
        <!--标题-->
        <attr format="string|reference" name="vm_line_title" />
        <!--描述图标-->
        <attr format="reference" name="vm_line_caption_icon" />
        <!--内容描述-->
        <attr format="string|reference" name="vm_line_caption" />
        <!--右侧图标-->
        <attr format="reference" name="vm_line_right_icon" />
        <!--说明-->
        <attr format="string|reference" name="vm_line_description" />
        <!--装饰分割线-->
        <attr format="boolean" name="vm_line_decoration" />
    </declare-styleable>

    <!--自定义 VMTopBar 控件-->
    <declare-styleable name="VMTopBar">
        <!--返回图标-->
        <attr format="reference" name="vm_top_bar_icon" />
        <!--标题-->
        <attr format="string|reference" name="vm_top_bar_title" />
        <!--子标题-->
        <attr format="string|reference" name="vm_top_bar_subtitle" />
        <!--右侧按钮-->
        <attr format="string|reference" name="vm_top_bar_end_btn" />
        <!--右侧图标-->
        <attr format="reference" name="vm_top_bar_end_icon" />
        <!--标题颜色-->
        <attr format="color|integer" name="vm_top_bar_title_color" />
        <!--背景颜色-->
        <attr format="color|integer" name="vm_top_bar_bg_color" />
    </declare-styleable>
</resources>