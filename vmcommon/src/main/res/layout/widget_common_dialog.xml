<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/vm_dimen_32"
    android:background="@drawable/shape_card_common_bg">

    <TextView
        android:id="@+id/dialogContentTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/vm_dimen_40"
        android:gravity="center"
        android:paddingStart="@dimen/vm_dimen_24"
        android:paddingEnd="@dimen/vm_dimen_24"
        android:textColor="@color/app_title"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="弹框内容" />

    <TextView
        android:id="@+id/dialogPositiveTV"
        style="@style/AppBtn.Cancel"
        android:layout_width="@dimen/vm_dimen_0"
        android:layout_height="@dimen/vm_dimen_40"
        android:layout_marginStart="@dimen/vm_dimen_24"
        android:layout_marginTop="@dimen/vm_dimen_40"
        android:layout_marginEnd="@dimen/vm_dimen_10"
        android:layout_marginBottom="@dimen/vm_dimen_20"
        android:text="@string/btn_cancel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/dialogConfirmTV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialogContentTV" />

    <TextView
        android:id="@+id/dialogConfirmTV"
        style="@style/AppBtn.Confirm"
        android:layout_width="@dimen/vm_dimen_0"
        android:layout_height="@dimen/vm_dimen_40"
        android:layout_marginStart="@dimen/vm_dimen_10"
        android:layout_marginTop="@dimen/vm_dimen_40"
        android:layout_marginEnd="@dimen/vm_dimen_24"
        android:layout_marginBottom="@dimen/vm_dimen_20"
        android:text="@string/btn_confirm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/dialogPositiveTV"
        app:layout_constraintTop_toBottomOf="@+id/dialogContentTV"
        app:layout_goneMarginStart="@dimen/vm_dimen_24" />
</androidx.constraintlayout.widget.ConstraintLayout>