<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.vmloft.develop.library.example">

    <!--允许应用程序完全使用网络-->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 录音 -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <!--相机权限-->
    <uses-permission android:name="android.permission.CAMERA" />
    <!--读写外部存储设备权限-->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- 获取设备识别码 IMEI -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <!-- 获取网络状态 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- 获取wifi状态 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!-- 允许程序在手机屏幕关闭后后台运行 -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <!--弹出框-->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <application
        android:name=".base.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <!--主界面-->
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--工具界面-->
        <activity android:name=".tools.ToolsActivity" />

        <!--自定义控件-->
        <activity
            android:name=".demo.custom.CustomViewActivity"
            android:windowSoftInputMode="adjustResize|stateHidden" />
        <!--描点控件-->
        <activity android:name=".demo.custom.DotLineActivity" />
        <!--显示详情控件-->
        <activity android:name=".demo.details.DetailsActivity" />

        <!--录制屏幕-->
        <activity android:name=".demo.screen.RecordScreenActivity" />
        <service android:name=".demo.screen.SRService" />

        <!--播放音频-->
        <activity android:name=".demo.audio.MediaPlayActivity" />

        <!--按钮主题样式-->
        <activity android:name=".demo.style.BtnStyleActivity" />

        <!--弹出PopupWindow窗口-->
        <activity android:name=".demo.dialog.FloatMenuActivity" />

        <!--Web 功能界面-->
        <activity android:name=".demo.web.WebActivity" />

        <!--指示器界面-->
        <activity android:name=".demo.indicator.IndicatorActivity" />

        <!--图片识别-->
        <activity android:name=".demo.image.ImageDiscernActivity" />
        <!--图片选择器-->
        <activity android:name=".demo.picker.PickerActivity" />
        <activity android:name=".demo.ThreadActivity" />

        <!--通过 url 打开页面 vmlibrary://demo/with?id=1001-->
        <activity android:name=".demo.scheme.SchemeActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="demo"
                    android:pathPrefix="/with"
                    android:scheme="vmlibrary" />
            </intent-filter>
        </activity>

    </application>
</manifest>
