<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_coordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:orientation="vertical">

    <include layout="@layout/widget_common_top_bar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--弹幕容器-->
        <com.vmloft.develop.library.tools.widget.barrage.VMBarrageView
            android:id="@+id/barrageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <View
            android:id="@+id/animView"
            android:layout_width="@dimen/vm_dimen_36"
            android:layout_height="@dimen/vm_dimen_36"
            android:layout_centerInParent="true"
            android:background="@drawable/shape_circle_common_bg"
            android:backgroundTint="@color/app_main" />

        <com.vmloft.develop.library.tools.widget.VMViewGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <!--启动弹幕-->
            <Button
                android:id="@+id/barrageStartBtn"
                style="@style/VMBtn.Flat.Fillet.Accent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/vm_margin_normal"
                android:text="启动" />
            <!--暂停弹幕-->
            <Button
                android:id="@+id/barragePauseBtn"
                style="@style/VMBtn.Flat.Fillet.Accent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/vm_margin_normal"
                android:text="暂停" />
            <!--继续弹幕-->
            <Button
                android:id="@+id/barrageResumeBtn"
                style="@style/VMBtn.Flat.Fillet.Accent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/vm_margin_normal"
                android:text="继续" />
            <!--停止弹幕-->
            <Button
                android:id="@+id/barrageStopBtn"
                style="@style/VMBtn.Flat.Fillet.Accent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/vm_margin_normal"
                android:text="停止" />
            <!--发出弹幕-->
            <Button
                android:id="@+id/barrageSendBtn"
                style="@style/VMBtn.Flat.Fillet.Accent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/vm_margin_normal"
                android:text="新增" />
            <!--发出弹幕-->
            <Button
                android:id="@+id/barrageResetBtn"
                style="@style/VMBtn.Flat.Fillet.Accent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/vm_margin_normal"
                android:text="重置" />

            <!--开始动画-->
            <Button
                android:id="@+id/animStartBtn"
                style="@style/VMBtn.Flat.Fillet.Accent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/vm_margin_normal"
                android:text="开始" />
            <!--开始动画-->
            <Button
                android:id="@+id/animPauseBtn"
                style="@style/VMBtn.Flat.Fillet.Accent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/vm_margin_normal"
                android:text="暂停" />
            <!--开始动画-->
            <Button
                android:id="@+id/animResumeBtn"
                style="@style/VMBtn.Flat.Fillet.Accent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/vm_margin_normal"
                android:text="继续" />
            <!--开始动画-->
            <Button
                android:id="@+id/animStopBtn"
                style="@style/VMBtn.Flat.Fillet.Accent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/vm_margin_normal"
                android:text="停止" />

        </com.vmloft.develop.library.tools.widget.VMViewGroup>
    </RelativeLayout>
</LinearLayout>