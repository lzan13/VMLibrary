<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/vm_dimen_96"
    android:layout_height="@dimen/vm_dimen_48"
    android:background="@drawable/selector_table_row_bg">

    <TextView
        android:id="@+id/tableRowNameTV"
        android:layout_width="@dimen/vm_dimen_96"
        android:layout_height="match_parent"
        android:gravity="center|left"
        android:paddingStart="16dp"
        android:textColor="#404040"
        android:textSize="14dp"
        tools:text="客服名称" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/decoration_line"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="16dp"
        android:background="@color/app_decoration" />
</RelativeLayout>
