<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_coordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/vm_theme_background"
    android:fitsSystemWindows="true">

    <include layout="@layout/widget_common_appbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/vm_margin_large"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <EditText
            android:id="@+id/edit_str"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入要加密内容" />

        <Button
            android:id="@+id/btn_key_hashes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Key Hashes"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_md5_signature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MD5"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_base64"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Base64"
            android:textAllCaps="false" />
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>