<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:orientation="vertical"
    tools:context=".tools.ToolsActivity"
    >

    <include layout="@layout/widget_common_top_bar" />


    <EditText
        android:id="@+id/edit_str"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入要加密内容"
        />
    <com.vmloft.develop.library.tools.widget.VMViewGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <Button
            android:id="@+id/btn_key_hashes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Key Hashes"
            android:textAllCaps="false"
            />

        <Button
            android:id="@+id/btn_md5_signature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MD5"
            android:textAllCaps="false"
            />

        <Button
            android:id="@+id/btn_base64"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Base64"
            android:textAllCaps="false"
            />
        <Button
            android:id="@+id/tools_random_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="随机数"
            android:textAllCaps="false"
            />
    </com.vmloft.develop.library.tools.widget.VMViewGroup>
    <!--展示结果控件-->
    <TextView
        android:id="@+id/tools_result_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
</LinearLayout>