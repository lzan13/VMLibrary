<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    tools:context=".ui.demo.custom.CustomViewActivity">

    <include layout="@layout/widget_common_top_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/commonTopLL"
        android:orientation="vertical">

        <com.vmloft.develop.library.tools.widget.VMViewGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!--倒计时控件-->
            <com.vmloft.develop.library.tools.widget.VMTimerBtn
                android:id="@+id/customTimerBtn"
                style="@style/VMBtn.Fillet.Accent"
                android:layout_margin="@dimen/vm_margin_normal"
                android:onClick="startTimer"
                android:text="定时"
                app:vm_timer_text="%ds 后结束"
                app:vm_timer_time="10" />

            <Button
                style="@style/VMBtn.Fillet.Accent"
                android:layout_margin="@dimen/vm_margin_normal"
                android:onClick="tips1"
                android:text="Tips1" />

            <Button
                style="@style/VMBtn.Fillet.Accent"
                android:layout_margin="@dimen/vm_margin_normal"
                android:onClick="tips2"
                android:text="Tips2" />

            <Button
                style="@style/VMBtn.Fillet.Accent"
                android:layout_margin="@dimen/vm_margin_normal"
                android:onClick="tips3"
                android:text="Tips3" />

            <Button
                style="@style/VMBtn.Fillet.Accent"
                android:layout_margin="@dimen/vm_margin_normal"
                android:onClick="tips4"
                android:text="Tips4" />

            <Button
                style="@style/VMBtn.Fillet.Accent"
                android:layout_margin="@dimen/vm_margin_normal"
                android:onClick="tips5"
                android:text="Tips5" />

            <Button
                style="@style/VMBtn.Fillet.Accent"
                android:layout_margin="@dimen/vm_margin_normal"
                android:onClick="showDialog"
                android:text="Dialog" />
        </com.vmloft.develop.library.tools.widget.VMViewGroup>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/app_bg">

            <TextView
                android:id="@+id/testTV"
                android:layout_width="match_parent"
                android:layout_height="@dimen/vm_dimen_48"
                android:background="@color/app_accent"
                android:text="显示内容"
                android:textAlignment="center"
                app:layout_constraintTop_toTopOf="parent" />

            <com.vmloft.develop.library.tools.widget.voice.VMVoiceRecordView
                android:id="@+id/voiceRecordView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/vm_dimen_192"
                app:layout_constraintTop_toBottomOf="@+id/testTV"

                app:vm_bg_color="#fafafb"

                app:vm_cancel_color="#f2f2f4"
                app:vm_cancel_color_activate="#f0578e"
                app:vm_cancel_icon="@drawable/ic_close_gray"
                app:vm_cancel_icon_activate="@drawable/ic_close_white"
                app:vm_cancel_size="@dimen/vm_dimen_56"

                app:vm_desc_cancel="松开 取消"
                app:vm_desc_color="#44407a"
                app:vm_desc_font_size="@dimen/vm_size_14"
                app:vm_desc_normal="按下 说话"

                app:vm_inner_color="#6457f0"
                app:vm_inner_color_cancel="#c7c6d4"
                app:vm_inner_icon="@drawable/ic_voice_record_mic_white"
                app:vm_inner_icon_cancel="@drawable/ic_voice_record_mic_black"
                app:vm_inner_size="@dimen/vm_dimen_64"

                app:vm_outer_color="#ffffff"
                app:vm_outer_size="@dimen/vm_dimen_128"

                app:vm_simple_time="100"

                app:vm_time_color="#44407a"
                app:vm_time_font_size="@dimen/vm_size_14" />

            <com.vmloft.develop.library.tools.widget.voice.VMVoiceRecordAnimView
                android:id="@+id/voiceRecordAnimView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/vm_dimen_72"
                android:visibility="visible"
                app:layout_constraintTop_toTopOf="@+id/testTV"
                app:vm_anim_base_height="@dimen/vm_dimen_8"
                app:vm_anim_base_width="@dimen/vm_dimen_4"
                app:vm_anim_end_color="#86fff8"
                app:vm_anim_start_color="#6457f0" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <com.vmloft.develop.library.tools.widget.voice.VMVoiceWaveformView
                android:id="@+id/voiceWaveformViewLeft"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/vm_dimen_42"
                android:background="@color/vm_gray_white"
                app:vm_line_bg_color="@color/vm_gray"
                app:vm_line_fg_color="@color/vm_black"
                app:vm_line_space="@dimen/vm_dimen_1"
                app:vm_line_width="@dimen/vm_dimen_2" />

<!--            <com.vmloft.develop.library.tools.widget.voice.VMVoiceWaveformView-->
<!--                android:id="@+id/voiceWaveformViewRight"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="@dimen/vm_dimen_42"-->
<!--                android:background="@color/vm_green"-->
<!--                app:vm_line_bg_color="@color/vm_gray"-->
<!--                app:vm_line_fg_color="@color/vm_white"-->
<!--                app:vm_line_space="@dimen/vm_dimen_1"-->
<!--                app:vm_line_width="@dimen/vm_dimen_2" />-->

        </LinearLayout>

        <com.vmloft.develop.library.tools.widget.VMLineView
            style="@style/AppLVStyle"
            app:vm_line_icon="@drawable/icon_mine_moments"
            app:vm_line_right_icon="@drawable/ic_arrow_next"
            app:vm_line_title="测试 Item0" />

        <com.vmloft.develop.library.tools.widget.VMLineView
            style="@style/AppLVStyle"
            android:layout_height="@dimen/vm_dimen_48"
            app:vm_line_icon="@drawable/icon_mine_moments"
            app:vm_line_right_icon="@drawable/ic_arrow_next"
            app:vm_line_title="测试 Item1" />

        <com.vmloft.develop.library.tools.widget.VMLineView
            style="@style/AppLVStyle"
            android:layout_height="@dimen/vm_dimen_64"
            app:vm_line_icon="@drawable/icon_mine_moments"
            app:vm_line_right_icon="@drawable/ic_arrow_next"
            app:vm_line_title="测试 Item2" />

        <com.vmloft.develop.library.tools.widget.VMLineView
            style="@style/AppLVStyle"
            app:vm_line_caption="右侧说明"
            app:vm_line_decoration="right"
            app:vm_line_description="底部描述内容底部描述内容底部描述内容底部描述内容底部描述内容底部描述内容底部描述内容"
            app:vm_line_icon="@drawable/ic_camera"
            app:vm_line_right_icon="@drawable/ic_arrow_next"
            app:vm_line_title="测试 Item" />

        <com.vmloft.develop.library.tools.widget.VMLineView
            style="@style/AppLVStyle"
            app:vm_line_caption="右侧说明右侧说明"
            app:vm_line_caption_space="@dimen/vm_dimen_16"
            app:vm_line_description="测试描述文本，这是底部的描述文本，底部描述内容底部描述内容底部描述内容底部描述内容底部描述内容底部描述内容底部描述内容"
            app:vm_line_icon="@drawable/ic_chat_flash"
            app:vm_line_title="测试测试测试" />

    </LinearLayout>
</RelativeLayout>
